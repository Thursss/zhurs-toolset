{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "strict": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "dom",
      "ESNext"
    ],
    "paths": {
      "@/*": [
        "lib/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}