{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "outDir": "./dist/",
    "strict": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["dom", "ESNext"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
